				<inline-edit>
					<inline-find><![CDATA[&nbsp;<!-- IF postrow.U_POST_AUTHOR --><a href="{postrow.U_POST_AUTHOR}">{PROFILE_IMG}</a> <!-- ENDIF -->]]></inline-find>
					<inline-action type="after-add"><![CDATA[ <!-- IF postrow.U_XFIRE and S_USER_LOGGED_IN --><a href="http://profile.xfire.com/{postrow.U_XFIRE}">{XFIRE_IMG}</a> <!-- ENDIF -->]]></inline-action>
				</inline-edit>
